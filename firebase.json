{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
      ],
    "rewrites": [
        {
            "source": "/add",
            "function": "add"
        },
        {
            "source": "**",
            "function": "load"
        }]
  },
  "database": {
    "rules": "database.rules.json"
  }
}
